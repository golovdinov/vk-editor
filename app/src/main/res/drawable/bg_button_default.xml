<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_blue_bg_disabled" />
            <corners android:radius="@dimen/button_corner_radius" />
            <padding
                android:left="@dimen/button_padding_left"
                android:top="@dimen/button_padding_top"
                android:right="@dimen/button_padding_right"
                android:bottom="@dimen/button_padding_bottom" />
        </shape>
    </item>

    <item>
        <ripple android:color="@color/button_blue_ripple">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_blue_bg" />
                    <corners android:radius="@dimen/button_corner_radius" />
                    <padding
                        android:left="@dimen/button_padding_left"
                        android:top="@dimen/button_padding_top"
                        android:right="@dimen/button_padding_right"
                        android:bottom="@dimen/button_padding_bottom" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>